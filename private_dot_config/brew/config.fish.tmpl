#! /usr/bin/env fish

# See https://docs.brew.sh/Manpage#environment

{{- if lookPath "bat" }}
set -gx HOMEBREW_BAT 1
# set -gx HOMEBREW_BAT_CONFIG_PATH $HOME/.bat/config
{{- end }}

set -gx HOMEBREW_DISPLAY_INSTALL_TIMES 1

{{- if hasKey . "homebrew" -}}
{{-   if hasKey .homebrew "api_token" }}
set -gx HOMEBREW_GITHUB_API_TOKEN '{{ keyring "homebrew-github-api" .github.user }}'
{{-   end }}

{{-  if hasKey .homebrew "packages" }}
set -gx HOMEBREW_GITHUB_PACKAGES_TOKEN '{{ keyring "homebrew-github-packages" .homebrew.packages.user }}'
set -gx HOMEBREW_GITHUB_PACKAGES_USER "{{ .homebrew.packages.user }}"
{{-   end }}
{{- end }}

# set -gx HOMEBREW_NO_ANALYTICS 1
# set -gx HOMEBREW_NO_AUTO_UPDATE 1
# set -gx HOMEBREW_NO_GITHUB_API 1

set -gx HOMEBREW_NO_INSECURE_REDIRECT 1
